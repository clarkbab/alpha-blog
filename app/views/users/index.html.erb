<h1 class="page-title">Ruby Bloggers</h1>
<% @users.each do |user| %>
	<%= will_paginate %>
	<div class="user well">
		<div class="row">
			<div class="col-sm-2 icon">
				<%= link_to gravatar_for(user), user_path(user) %>
			</div>
			<div class="col-sm-10 details">
				<div class="name">
					<h2><%= link_to user.username, user_path(user) %></h2>
					<% if logged_in? and current_user.admin? %>
						<%= link_to "Delete this user?", user_path(user), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this user all their articles?"} %>
					<% end %>
				</div>
				<span><%= pluralize(user.articles.count, "article") %></span>
			</div>
		</div>
	</div>
	<%= will_paginate %>
<% end %>