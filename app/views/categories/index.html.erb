<h1 class="page-title">Categories</h1>
<% @categories.each do |category| %>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="well center">
                <h3>
                    <%= link_to category.name.capitalize, category_path(category) %>
                </h3>
            </div>
        </div>
    </div>
<% end %>