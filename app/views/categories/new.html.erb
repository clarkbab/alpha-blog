<div class="row">
    <div class="col-sm-10 col-sm-offset-2">
        <h1 class="page-title">Create New Category</h1>
    </div>
</div>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :name %>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-1 col-sm-offset-2">
            <%= f.submit "Create Category", class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>

<div class="col-sm-4 col-sm-offset-4" align="center">
    [ <%= link_to "Back to articles list", articles_path %> ]
</div>
